<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rTitleTV"
            android:text="Judul Disini"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/rImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/rLocationTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi Muncul Disini"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/rMasjidTV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <TextView
            android:id="@+id/rUstadzTV"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/rDescriptionTV"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>